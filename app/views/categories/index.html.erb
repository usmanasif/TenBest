<% provide(:title, "Best Categories") %>
<% provide(:body_class, "category-page") %>

<div class="container admin-container">

<div class="row">
  <div class="col-md-6">
    <h1>Categories</h1>
  </div>
  <div class="col-md-6">
    <%= link_to 'New category', new_category_path,class: "new-record btn btn-primary" %>
  </div>
</div>


<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td>
          <%= link_to '<span class="glyphicon glyphicon-ok"></span>'.html_safe, category %>
          <%= link_to '<span class="glyphicon glyphicon-pencil"></span>'.html_safe, edit_category_path(category) %>
          <%= link_to '<span class="glyphicon glyphicon-remove"></span>'.html_safe, category, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
