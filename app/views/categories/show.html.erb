<% provide(:title, @category.name) %>
<% provide(:body_class, "category-page") %>

<div class="container">
<p id="notice"><%= notice %></p>
<div class="page-heading">
  <h2><%= @category.name %></h2>
</div>

<div class="row">
  <div class="col-md-6">
    <h3>Sub-Categories</h3>
  </div>
  <div class="col-md-6">
    <%= link_to 'New sub category', new_category_sub_category_path(category_id: @category.slug), class: "new-record btn btn-primary" %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>No</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @category.sub_categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-ok"></span>'.html_safe, category_sub_category_path(category,category_id: @category.slug) %>
        <%= link_to '<span class="glyphicon glyphicon-pencil"></span>'.html_safe, edit_category_sub_category_path(category,category_id: @category.slug) %>
        <%= link_to '<span class="glyphicon glyphicon-remove"></span>'.html_safe, category_sub_category_path(category,category_id: @category.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Edit', edit_category_path(@category), class: "btn btn-default" %>
<%= link_to 'Back', categories_path, class: "btn btn-default" %>
</div>
