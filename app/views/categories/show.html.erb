<% provide(:title, @category.name) %>
<% provide(:body_class, "category-page") %>

<div class="container">
<div class="page-heading">
  <h2 class="header"><%= @category.name %></h2>
</div>

<div class="row">
  <div class="col-md-6">
    <h3>Sub-Categories</h3>
  </div>
  <div class="col-md-6">
    <%= link_to 'New sub category',"javascript:;", class: "new-record add_sub_category btn btn-primary" %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>No</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @category.sub_categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-ok"></span>'.html_safe, category_sub_category_path(category,category_id: @category.slug) %>
        <%= link_to '<span class="glyphicon glyphicon-pencil"></span>'.html_safe, edit_category_sub_category_path(category,category_id: @category.slug), remote: true %>
        <%= link_to '<span class="glyphicon glyphicon-remove"></span>'.html_safe, category_sub_category_path(category,category_id: @category.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Edit', edit_category_path(@category), class: "btn btn-default" %>
<%= link_to 'Back', categories_path, class: "btn btn-default" %>
</div>
<div class="modal fade" tabindex="-1" role="dialog" id="add-sub-category">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">New Sub-Category</h4>
      </div>
      <%= render 'sub_categories/new' %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<div class="modal fade" tabindex="-1" role="dialog" id="edit-sub-category"></div>